{{!--
    Facebook/Open-graph
    https://developers.facebook.com/docs/sharing/webmasters#markup
--}}
<meta property="fb:app_id" content="123456789">
<meta property="og:url" content="http://example.com/absolute/url/to/page.html">
<meta property="og:type" content="website">
<meta property="og:title" content="Content Title">
<meta property="og:image" content="http://example.com/absolute/url/to/image.jpg">
<meta property="og:description" content="Description Here">
<meta property="og:site_name" content="Site Name">
<meta property="og:locale" content="en_US">
<meta property="article:author" content="">
{{!--
    Twitter
    https://developer.twitter.com/en/docs/tweets/optimize-with-cards/guides/getting-started
--}}
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@site_account">
<meta name="twitter:creator" content="@individual_account">
<meta name="twitter:url" content="http://example.com/absolute/url/to/page.html">
<meta name="twitter:title" content="Content Title">
<meta name="twitter:description" content="Content description less than 200 characters">
<meta name="twitter:image" content="http://example.com/absolute/url/to/image.jpg">

